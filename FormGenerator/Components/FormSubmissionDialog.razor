@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-3">@Title</MudText>
        <MudPaper Elevation="0" Class="pa-4 mud-background-gray">
            <MudTextField Value="@FormData"
                          Label="JSON Data"
                          ReadOnly="true"
                          Lines="12"
                          Variant="Variant.Outlined"
                          FullWidth="true" />
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string FormData { get; set; }
    [Parameter] public string Title { get; set; } = "Form Data";

    private void Close() => MudDialog.Close();
}